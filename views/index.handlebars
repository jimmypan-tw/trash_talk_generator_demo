<div class="container mt-5">
    <h1 class="text-center my-4">你想對誰說幹話？</h1>
    <form action="/" method="POST">
        <!--Profile Photos and Selection Inputs-->
        <div class="row">
            <div class="col-4">
                <profile class="text-center pb-3">
                    <div class="profile-photo-box mb-3">
                        <div class="profile-photo" id="engineer-photo">
                        </div>
                    </div>
                    <input type="radio" name="target" class="mr-1" value="engineer" {{engineer}}>
                    工程師
                </profile>
            </div>

            <div class="col-4">
                <profile class="text-center pb-3">
                    <div class="profile-photo-box mb-3">
                        <div class="profile-photo" id="designer-photo"></div>
                    </div>
                    <input type="radio" name="target" class="mr-1" value="designer" {{designer}}>
                    設計師
                </profile>
            </div>
            <div class="col-4">
                <profile class="text-center pb-3">
                    <div class="profile-photo-box mb-3">
                        <div class="profile-photo" id="entrepreneur-photo"></div>
                    </div>
                    <input type="radio" name="target" class="mr-1" value="entrepreneur" {{entrepreneur}}>
                    創業家
                </profile>
            </div>
        </div>
        <!--Result Display-->
        <div class="row mt-5">
            <div class="col-auto pl-0">
                <button class="btn btn-outline-secondary rounded-0">產生幹話</button>
            </div>
            <div class="col-auto flex-grow-1 p-0 pr-3">
                <textarea class="w-100" name="result-display" id="result-display" cols="30"
                    rows="4">{{trashtalk}}</textarea>
            </div>
        </div>
    </form>

</div>